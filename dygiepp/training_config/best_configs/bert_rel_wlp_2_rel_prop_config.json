{
    "dataset_reader": {
        "type": "ie_json",
        "context_width": 3,
        "max_span_width": 8,
        "token_indexers": {
            "bert": {
                "type": "bert-pretrained",
                "do_lowercase": false,
                "pretrained_model": "bert-base-cased",
                "use_starting_offsets": true
            }
        }
    },
    "iterator": {
        "type": "ie_batch",
        "batch_size": 10
    },
    "model": {
        "type": "dygie",
        "context_layer": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 200,
            "input_size": 768,
            "num_layers": 1
        },
        "display_metrics": [
            "rel_precision",
            "rel_recall",
            "rel_f1"
        ],
        "feature_size": 20,
        "initializer": [
            [
                "_span_width_embedding.weight",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_context_layer._module.weight_ih.*",
                {
                    "type": "xavier_normal"
                }
            ],
            [
                "_context_layer._module.weight_hh.*",
                {
                    "type": "orthogonal"
                }
            ]
        ],
        "lexical_dropout": 0.5,
        "loss_weights": {
            "coref": 0,
            "events": 0,
            "ner": 1,
            "relation": 1
        },
        "lstm_dropout": 0.4,
        "max_span_width": 8,
        "modules": {
            "coref": {
                "antecedent_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 2480,
                    "num_layers": 2
                },
                "coref_prop": 0,
                "initializer": [
                    [
                        ".*linear_layers.*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*scorer._module.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        "_distance_embedding.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
                "max_antecedents": 100,
                "mention_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 820,
                    "num_layers": 2
                },
                "span_emb_dim": 820,
                "spans_per_word": 0.4
            },
            "events": {
                "argument_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 1220,
                    "num_layers": 2
                },
                "argument_spans_per_word": 0.8,
                "initializer": [
                    [
                        ".*linear_layers.*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*scorer._module.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        "_distance_embedding.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
                "loss_weights": {
                    "arguments": 1,
                    "trigger": 1
                },
                "mention_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 820,
                    "num_layers": 2
                },
                "positive_label_weight": 1,
                "trigger_candidate_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 400,
                    "num_layers": 2
                },
                "trigger_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 400,
                    "num_layers": 2
                },
                "trigger_spans_per_word": 0.4
            },
            "ner": {
                "initializer": [
                    [
                        ".*linear_layers.*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*scorer._module.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        "_distance_embedding.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
                "mention_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 820,
                    "num_layers": 2
                }
            },
            "relation": {
                "initializer": [
                    [
                        ".*linear_layers.*weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        ".*scorer._module.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ],
                    [
                        "_distance_embedding.weight",
                        {
                            "type": "xavier_normal"
                        }
                    ]
                ],
                "mention_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 820,
                    "num_layers": 2
                },
                "positive_label_weight": 1,
                "rel_prop": 2,
                "relation_feedforward": {
                    "activations": "relu",
                    "dropout": 0.4,
                    "hidden_dims": 150,
                    "input_dim": 2460,
                    "num_layers": 2
                },
                "span_emb_dim": 820,
                "spans_per_word": 0.5
            }
        },
        "text_field_embedder": {
            "allow_unmatched_keys": true,
            "embedder_to_indexer_map": {
                "bert": [
                    "bert",
                    "bert-offsets"
                ],
                "token_characters": [
                    "token_characters"
                ]
            },
            "token_embedders": {
                "bert": {
                    "type": "bert-pretrained",
                    "pretrained_model": "bert-base-cased",
                    "requires_grad": false
                }
            }
        },
        "use_attentive_span_extractor": false,
        "valid_events_dir": "/data/dave/proj/dygie/dygie-experiments/datasets/ace-event/valid-configurations"
    },
    "train_data_path": "/home/ulme/data/wlp/json//train.json",
    "validation_data_path": "/home/ulme/data/wlp/json//dev.json",
    "test_data_path": "/home/ulme/data/wlp/json//test.json",
    "trainer": {
        "cuda_device": 3,
        "grad_norm": 5,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 8
        },
        "num_epochs": 250,
        "optimizer": {
            "type": "sgd",
            "lr": 0.01,
            "momentum": 0.9,
            "nesterov": true
        },
        "patience": 15,
        "validation_metric": "+rel_f1"
    },
    "validation_iterator": {
        "type": "ie_document"
    }
}
